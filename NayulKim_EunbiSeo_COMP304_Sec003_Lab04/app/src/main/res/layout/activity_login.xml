<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="0.7"
        app:srcCompat="@drawable/nurselogin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/user_login" />

        <EditText
            android:id="@+id/etNurseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.5"
            android:backgroundTint="#1957b0"
            android:ems="10"
            android:hint="Nurse ID (Number)"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/pw_login" />

        <EditText
            android:id="@+id/etNursePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:backgroundTint="#1957b0"
            android:ems="10"
            android:hint="Nurse Password"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/nurseLoginBtn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="signIn"
            android:src="@drawable/signin" />

        <ImageButton
            android:id="@+id/nurseSignUptn"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerInParent="true"
            android:onClick="registerNurse"
            android:src="@drawable/signup"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>